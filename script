ln -s $HOME/dotfiles/ctags       $HOME/.ctags
ln -s $HOME/dotfiles/gitignore   $HOME/.gitignore
ln -s $HOME/dotfiles/tmuxrc.conf $HOME/.tmuxrc.conf
ln -s $HOME/dotfiles/vim         $HOME/.vim
ln -s $HOME/dotfiles/vimrc       $HOME/.vimrc
ln -s $HOME/dotfiles/vimshell    $HOME/.vimshell
ln -s $HOME/dotfiles/zshrc       $HOME/.zshrc
ln -s $HOME/dotfiles/irbrc       $HOME/.irbrc

cat >> $HOME/.ssh/config << EOS
Host github.com
 User git
 Hostname github.com
 PreferredAuthentications publickey
 IdentityFile ~/.ssh/github
EOS


mkdir -p ~/.vim/bundle
git clone git://github.com/Shougo/neobundle.vim ~/.vim/bundle/neobundle.vim
git clone https://github.com/szw/vim-tags.git ~/.vim/bundle/vim-tags
