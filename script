ln -fs $HOME/dotfiles/ctags           $HOME/.ctags
ln -fs $HOME/dotfiles/gitignore       $HOME/.gitignore
ln -fs $HOME/dotfiles/tmuxrc.conf     $HOME/.tmuxrc.conf
ln -fs $HOME/dotfiles/vim             $HOME/.vim
ln -fs $HOME/dotfiles/vimrc           $HOME/.vimrc
ln -fs $HOME/dotfiles/zshrc           $HOME/.zshrc
ln -fs $HOME/dotfiles/zshrc.local     $HOME/.zshrc.local
ln -fs $HOME/dotfiles/irbrc           $HOME/.irbrc

#cat >> $HOME/.ssh/config << EOS
#Host github.com
# User git
# Hostname github.com
# PreferredAuthentications publickey
# IdentityFile ~/.ssh/github
#EOS

mkdir -p $HOME/dotfiles/vim/bundle
cd $HOME/dotfiles/vim/bundle
git clone git://github.com/Shougo/neobundle.vim $HOME/dotfiles/vim/bundle/neobundle.vim
vim +NeoBundleInstall +q


