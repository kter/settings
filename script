ln -fs $HOME/dotfiles/ctags       $HOME/.ctags
ln -fs $HOME/dotfiles/gitignore   $HOME/.gitignore
ln -fs $HOME/dotfiles/tmuxrc.conf $HOME/.tmuxrc.conf
ln -fs $HOME/dotfiles/vim         $HOME/.vim
ln -fs $HOME/dotfiles/vimrc       $HOME/.vimrc
ln -fs $HOME/dotfiles/vimshell    $HOME/.vimshell
ln -fs $HOME/dotfiles/zshrc       $HOME/.zshrc
ln -fs $HOME/dotfiles/irbrc       $HOME/.irbrc

#cat >> $HOME/.ssh/config << EOS
#Host github.com
# User git
# Hostname github.com
# PreferredAuthentications publickey
# IdentityFile ~/.ssh/github
#EOS


mkdir -p $HOME/.vim/bundle
git clone git://github.com/Shougo/neobundle.vim $HOME/.vim/bundle/neobundle.vim
git clone https://github.com/szw/vim-tags.git $HOME/.vim/bundle/vim-tags
git clone git://github.com/Shougo/vimshell.git $HOME/.vim/bundle/vimshell
git clone git://github.com/Shougo/vimproc.git $HOME/.vim/bundle/vimproc

cd $HOME/.vim/bundle/vimshell && cp -r autoload/ doc/ plugin/ syntax/ $HOME/.vim 
cd $HOME/.vim/bundle/neobundle.vim && cp -r autoload/ doc/ plugin/ $HOME/.vim 

cd $HOME/.vim/bundle/vimproc && make -f make_unix.mak

echo "execute :NeoBundleInstall in vim"

